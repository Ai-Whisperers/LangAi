# LLM Provider API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Search API
TAVILY_API_KEY=your_tavily_key_here

# Database (PostgreSQL with pgvector)
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/research_db

# LangSmith (Optional - for monitoring and evaluation)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_PROJECT=research-workflow-system

# Research Configuration
MAX_SEARCH_QUERIES=5
MAX_SEARCH_RESULTS=3
MAX_REFLECTION_STEPS=2
SOURCE_QUALITY_THRESHOLD=0.6

# Model Configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929
SUMMARIZATION_MODEL=gpt-4.1-mini
RESEARCH_MODEL=claude-sonnet-4-5-20250929
COMPRESSION_MODEL=gpt-4.1-mini

# File Output Configuration
OUTPUT_BASE_PATH=research_outputs
GENERATE_MARKDOWN=true
GENERATE_JSON=true
GENERATE_METADATA=true

# Memory Configuration
MEMORY_SEARCH_LIMIT=10
SEMANTIC_SIMILARITY_THRESHOLD=0.75
ENABLE_CROSS_TOPIC_LEARNING=true

# Source Quality Configuration
QUALITY_LEARNING_ENABLED=true
MIN_VISITS_FOR_RATING=3
QUALITY_UPDATE_INTERVAL=7  # days
