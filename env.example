# =============================================================================
# Company Researcher - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys
# All APIs have free tiers - see comments for limits
# =============================================================================

# =============================================================================
# REQUIRED - Core APIs
# =============================================================================

# Anthropic (Claude) - Required for LLM
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api##-your-key-here

# Tavily - Required for web search
# Get key at: https://tavily.com/
TAVILY_API_KEY=tvly-your-key-here

# =============================================================================
# BUDGET LLM PROVIDERS (Optional - for cost optimization)
# =============================================================================

# DeepSeek - Ultra-low cost ($0.14/1M tokens, 99% cheaper than Claude)
# Get key at: https://platform.deepseek.com/
# Uses OpenAI-compatible API
DEEPSEEK_API_KEY=sk-your-key-here

# Google Gemini - Search grounding + 2M context
# Get key at: https://aistudio.google.com/app/apikey
# Flash-8B: $0.04/1M tokens, 1.5 Pro: $1.25/1M (2M context)
GOOGLE_API_KEY=

# Groq - Ultra-fast inference (1,300 tokens/sec)
# Get key at: https://console.groq.com/
# Llama 70B: $0.59/1M tokens, 8B: $0.05/1M tokens
GROQ_API_KEY=gsk_your-key-here

# Mistral AI - European alternative
# Get key at: https://console.mistral.ai/
MISTRAL_API_KEY=

# OpenAI - GPT-4o, assistants, file search
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Perplexity - Search-native API
# Get key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-key-here

# =============================================================================
# CHINESE PROVIDERS (Ultra-low cost, use for non-sensitive data)
# =============================================================================

# Alibaba Qwen - $0.41/1M tokens
# Get key at: https://www.alibabacloud.com/
QWEN_API_KEY=

# ByteDance Doubao - $0.11/1M tokens (99.8% cheaper than GPT-4)
# Get key at: https://www.volcengine.com/
DOUBAO_API_KEY=

# Zhipu AI GLM-4 - $0.14/1M tokens, 25M free tokens
# Get key at: https://open.bigmodel.cn/
ZHIPU_API_KEY=

# =============================================================================
# FINANCIAL DATA APIs (All have free tiers)
# =============================================================================

# Alpha Vantage - Stock data and fundamentals
# Free: 25 requests/day
# Get key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# Financial Modeling Prep (FMP) - Best value for financials
# Free: 250 requests/day
# Get key at: https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY=

# Finnhub - Real-time quotes, news, sentiment
# Free: 60 requests/minute
# Get key at: https://finnhub.io/register
FINNHUB_API_KEY=

# Polygon.io - Historical stock data
# Free: 5 requests/minute (delayed data)
# Get key at: https://polygon.io/dashboard/signup
POLYGON_API_KEY=

# =============================================================================
# NEWS APIs (All have free tiers)
# =============================================================================

# NewsAPI - News from 80k+ sources
# Free: 100 requests/day (development only)
# Get key at: https://newsapi.org/register
NEWSAPI_KEY=

# GNews - Google News alternative
# Free: 100 requests/day
# Get key at: https://gnews.io/
GNEWS_API_KEY=

# Mediastack - Live news from 7,500+ sources
# Free: 500 requests/month
# Get key at: https://mediastack.com/signup
MEDIASTACK_API_KEY=

# =============================================================================
# COMPANY DATA APIs
# =============================================================================

# Hunter.io - Email finder and verification
# Free: 25 searches/month, 50 verifications/month
# Get key at: https://hunter.io/users/sign_up
HUNTER_API_KEY=

# Note: Domainsdb.info is FREE - no API key needed!

# =============================================================================
# GEOCODING APIs
# =============================================================================

# OpenCage - Forward/reverse geocoding
# Free: 2,500 requests/day
# Get key at: https://opencagedata.com/users/sign_up
OPENCAGE_API_KEY=

# Note: Nominatim (OpenStreetMap) is FREE - no API key needed!

# =============================================================================
# ML & AI APIs
# =============================================================================

# Hugging Face - ML model inference
# Free: Rate-limited tier
# Get key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# =============================================================================
# SOCIAL & COMMUNITY APIs
# =============================================================================

# Reddit - Community sentiment analysis
# Free: 100 requests/minute with OAuth
# Get keys at: https://www.reddit.com/prefs/apps (create "script" app)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# GitHub - Tech company analysis
# Free: 5,000 requests/hour (authenticated)
# Get token at: https://github.com/settings/tokens
GITHUB_TOKEN=

# =============================================================================
# OBSERVABILITY (Optional)
# =============================================================================

# AgentOps - Agent monitoring
AGENTOPS_API_KEY=

# LangSmith - LLM tracing (PAID - $39/mo+)
LANGSMITH_API_KEY=
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=langai-research
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Langfuse - FREE LangSmith Alternative (50K observations/month free)
# Get keys at: https://cloud.langfuse.com (or self-host)
LANGFUSE_PUBLIC_KEY=pk-lf-your-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-key-here
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true

# =============================================================================
# COST-OPTIMIZED SEARCH (Optional)
# =============================================================================

# Serper.dev - 10x cheaper than Tavily ($50/50K queries = $0.001/query)
# Get key at: https://serper.dev
SERPER_API_KEY=

# =============================================================================
# AI COMPONENTS (New AI-driven features)
# =============================================================================

# Global AI toggle - set to false to use legacy logic everywhere
AI_GLOBAL_ENABLED=true

# Per-component toggles - each can be disabled independently
AI_SENTIMENT_ENABLED=true
AI_QUERY_ENABLED=true
AI_QUALITY_ENABLED=true
AI_EXTRACTION_ENABLED=true

# Fallback behavior - enable to fall back to legacy on AI failure
AI_FALLBACK_TO_LEGACY=true

# Cost control thresholds (in USD)
AI_COST_WARN_THRESHOLD=0.50
AI_COST_MAX_THRESHOLD=1.00

# Migration settings - percentage of requests to route to AI (0-100)
AI_ROLLOUT_PERCENTAGE=100

# =============================================================================
# FREE APIs (No key required)
# =============================================================================
# - Domainsdb.info: Domain search (260M+ domains)
# - Nominatim: Geocoding via OpenStreetMap
# - SEC EDGAR: US public company filings
# - Yahoo Finance: Stock data (via yfinance library)
# - Google News RSS: Unlimited news queries (via feedparser)
# - Wikipedia API: Company overviews and facts
# - DuckDuckGo: Unlimited web search (via duckduckgo-search)
# - Jina Reader: URL to markdown (1M tokens/month free, no key needed for basic)
# - Crawl4AI: Open source web scraping (no key needed)
